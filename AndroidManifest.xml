<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.evolvingvision.trackyouritems"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.evolvingvision.trackyouritems.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.evolvingvision.trackyouritems.BorrowedItemsActivity"
            android:label="@string/title_activity_borrowed_items"
            android:parentActivityName="android.app.ListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.app.ListActivity" />
        </activity>
        <activity
            android:name="com.evolvingvision.trackyouritems.LentItemsActivity"
            android:label="@string/title_activity_lent_items"
            android:parentActivityName="android.app.ListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.app.ListActivity" />
        </activity>
        <activity
            android:name="com.evolvingvision.trackyouritems.AddLentItemActivity"
            android:label="@string/title_activity_add_lent_item" >
        </activity>
        <activity
            android:name="com.evolvingvision.trackyouritems.AddBorrowedItemActivity"
            android:label="@string/title_activity_add_borrowed_item" >
        </activity>
        <activity
            android:name="com.evolvingvision.trackyouritems.ViewActivity"
            android:label="@string/title_activity_view" >
        </activity>
        <activity
            android:name="com.evolvingvision.trackyouritems.SelectPersonActivity"
            android:label="@string/title_activity_select_person" >
        </activity>
        <activity
            android:name="com.evolvingvision.trackyouritems.SelectCategoryActivity"
            android:label="@string/title_activity_select_category" >
        </activity>
        <activity
            android:name="com.evolvingvision.trackyouritems.AddPersonActivity"
            android:label="@string/title_activity_add_person" >
        </activity>
    </application>

</manifest>